<% include partials/header %>
	<div class="row justify-content-md-center mt-5">
		<div class="col-md-4">
			<div class="card">
				<div class="card-header">
					<h2>Add Customer</h2>
				</div>
				<div class="card-body">
					<ul class="list-group"  style="font-size: 12px">
					<% if(errors != null){ %>
						<li class="list-group-item border-danger text-danger text-sm">
						<% errors.forEach(function(error){ %>
							<%= error.msg %> on field "<%= error.param %>" <br>
						<%	}) %>	
						</li>
					<% } %>
					</ul>
					<form method="POST" action="/users/add" class="mt-3">
						<div class="form-group">
							<label for="fname">First Name: </label>
							<input class="form-control form-control-sm" type="text" name="fname" id="fname">	
						</div>
						<div class="form-group">
							<label for="lname">Last Name: </label>
							<input class="form-control form-control-sm" type="text" name="lname" id="lname">	
						</div>
						<div class="form-group">
							<label for="email">Email: </label>
							<input class="form-control form-control-sm" type="text" name="email" id="email">
						</div>
						<div class="form-group float-right">
							<button class="btn btn-primary" type="submit" value="Submit"> <i class="far fa-paper-plane"></i> Submit</button>
						</div>						
					</form>
				</div>	
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-header">
					<h3>Users</h3>
				</div>
				<div class="card-body">
					<ul class="list-group list-group-flush">
						<% users.forEach(function(user){ %>
							<li class="list-group-item">
								<%= user.fname %> <%= user.lname %>
								<span class="float-right">
									<a href="#" class="update" data-id="<%= user._id %>"><i class="fas fa-edit"></i></a>
									<a href="#" class="text-danger delete" data-id="<%= user._id %>"><i class="fas fa-trash"></i></a> 
								</span>
								
							</li>
						<%	}) %>	
					</ul>
				</div>
			</div>
		</div>
	</div>


<% include partials/modal %>
<% include partials/footer %>
